{
  "manifest_version": 3,
  "name": "HTML to PDF Converter",
  "version": "1.0",
  "description": "Easily convert any HTML page to PDF.",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["activeTab", "downloads", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
